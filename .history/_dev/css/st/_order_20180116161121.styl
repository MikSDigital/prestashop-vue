.address-selector
  display flex
  flex-wrap wrap
  justify-content space-between
  .address-item
    width 220px
    padding medium-padding
    margin-top spacing-unit

#checkout-cart-summary
  float right
  width 30%


#conditions-to-approve
  margin-top small-padding
  margin-bottom 2*small-padding
  ul
    margin 0
    padding 0
    list-style none
    li
      padding 2*small-padding
      margin-bottom small-padding
      label
        cursor pointer
  button
    padding small-padding
    margin small-padding

.payment-options, .delivery-options, .order-options
  max-width 50%

.order-options
  label
    margin-top 2*small-padding

.payment-option, .delivery-option
  label
    cursor pointer
  label span
    margin 2*small-padding
.payment-option, .delivery-option, .payment-option label, .delivery-option label
  display flex
  flex-direction row
  align-items center
.payment-option label, .delivery-option label
  flex-grow 1
  span
    flex-grow 1
#payment-confirmation
  button, label
    margin-top small-padding
    display inline-block
    cursor pointer
    padding 3*small-padding
    margin-top 3*small-padding
    background-color cta-background-color
    border 1px solid cta-color
    color cta-color
    &:disabled
      background-color disabled-cta-background-color
      cursor default
.payment-options
  .warning
    color orange
.selected-payment-option, [name="select_payment_option"]
  min-width 80px
.selected-payment-option
  background-color cta-background-color
  border 1px solid cta-color
  color cta-color

.checkout-step
  .content
    display none
.checkout-step.-reachable
  > h1
    cursor pointer
.checkout-step.-complete
  > h1
    color green
.checkout-step.-current
  .content
    display block
.checkout-step
    .step-number
      margin-right small-padding
