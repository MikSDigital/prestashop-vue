  top 0
  left 0
  height: 100%

  img
    margin-bottom 10px

    &.active
      border-color #000 !important

.product-cover
  background-size: 150%

  img
    transition opacity 0.3s ease

.fullscreen-v-img
  background-color rgba(0, 0, 0,0.9) !important
.content-v-img
  img
    background-color #fff